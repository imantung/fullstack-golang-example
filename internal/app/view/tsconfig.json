{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "ts/**/*.ts*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}